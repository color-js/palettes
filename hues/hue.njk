<h1>{{ hue.name }}</h1>

<table>
<thead>
	<tr>
		<th>Palette</th>
		<th style="width: 100%">Scale</th>
	</tr>
	<tbody>
		{% for id, colors in hue.palettes %}
			<tr id="{{ id }}">
				<th><a href="../palette/{{id}}/#{{ hue.name }}">{{ palettes[id].name }}</a></th>
				<td><color-scale colors="{{ colors | serializeObject }}"></color-scale></td>
			</tr>
		{% endfor %}
	</tbody>
</thead>
</table>

